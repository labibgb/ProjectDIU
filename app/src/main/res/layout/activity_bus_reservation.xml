<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/gardient_color"
    tools:context=".busReservation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/reservation_date"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_below="@id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_round"
            android:gravity="center"
            android:hint="Date"
            android:paddingLeft="60dp"
            android:paddingTop="20dp"
            android:paddingRight="60dp"
            android:paddingBottom="20dp"
            android:textColor="@color/colorText"
            android:textColorHint="@color/hintcolor" />
        <EditText
            android:id="@+id/number_of_days"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_below="@id/reservation_date"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_round"
            android:gravity="center"
            android:hint="Number of days"
            android:inputType="number"
            android:paddingLeft="60dp"
            android:paddingTop="20dp"
            android:paddingRight="60dp"
            android:paddingBottom="20dp"
            android:textColor="@color/colorText"
            android:textColorHint="@color/hintcolor" />
        <EditText
            android:id="@+id/number_of_bus"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_below="@id/number_of_days"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_round"
            android:gravity="center"
            android:hint="Number of buses"
            android:inputType="number"
            android:paddingLeft="60dp"
            android:paddingTop="20dp"
            android:paddingRight="60dp"
            android:paddingBottom="20dp"
            android:textColor="@color/colorText"
            android:textColorHint="@color/hintcolor" />
        <EditText
            android:id="@+id/reason"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_below="@id/number_of_bus"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_round"
            android:gravity="center"
            android:textAlignment="gravity"
            android:hint="Reason"
            android:inputType="text"
            android:padding="20dp"
            android:textColor="@color/colorText"
            android:textColorHint="@color/hintcolor" />
        <Button
            android:id="@+id/reserve_bus"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@id/reason"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_round"
            android:gravity="center"
            android:onClick="mailSubmit"
            android:text="sumbit"
            android:textColor="@color/colorText" />
    </RelativeLayout>

</LinearLayout>